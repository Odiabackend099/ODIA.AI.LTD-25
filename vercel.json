{
  "github": {
    "silent": true
  },
  "rewrites": [
    {
      "source": "/admin/(.*)",
      "destination": "/odiadev-admin-dashboard/dist/$1"
    },
    {
      "source": "/widget/(.*)",
      "destination": "/odiadev-chat-widget/dist/$1"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api",
      "destination": "/api/index.js"
    }
  ],
  "trailingSlash": false
}